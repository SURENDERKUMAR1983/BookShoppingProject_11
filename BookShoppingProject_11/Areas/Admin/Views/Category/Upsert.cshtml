@model BookShoppingProject.Model.Category
@{
    ViewData["Title"] = "Upsert";
    var title = Model.Id != 0 ? "Edit Model" : "New Model";
}
<form method="post">
    <div class="row">
        <div class="col-12 bottom-border">
         <h2 class="text-center text-primary">@title</h2>
        </div>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    </div>
    <div class="col-12">
        <div class="form-group row">
            <div class="col-4">
                <label asp-for="Name"></label>
            </div>
            <div class="col-8">
                <input asp-for="Name"class="form-control"/>
                <span asp-validation-for="Name"class="text-danger"></span>
            </div>
        </div>        
    </div>
    <div class="form-group row p-2 m-2">
        <div class="col-8 offset-4">
            @if (Model.Id != 0)
            {
                <partial name="EditAndBackToListButton" />
            }
            else
            {
                <partial name="CreateAndBackToListButton" />
            }
        </div>      
    </div>
</form>
@section scripts 
{
<partial name="_ValidationScriptsPartial" />
}